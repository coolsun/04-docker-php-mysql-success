#confirmBox a.closex { display: inline-block; height: 13px; width: 16px; }

#confirmBox div.confirmBox-cotent {
	font-size: 13px;
	text-align: center;
	background-color: white;
	border: 1px solid #c3c3c3;
	padding-top: 15px;
	padding-bottom: 10px;
	position: relative;
}

#confirmBox .confirmBox-icon,
#confirmBox .confirmBox-message { display: inline-block; vertical-align: middle; margin: 0 4px; }

