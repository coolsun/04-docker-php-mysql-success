#confirmButtons{
	margin-top: 18px;
	text-align:center;
}

#confirmButtons a.button { display: inline-block; margin: 0 5px; padding: 4px 8px; border: 1px solid #c3c3c3; background: #DEDEDE; box-shadow: -1px 1px 1px rgba(255,255,255,0.5) inset; font-size: 14px; }
#confirmButtons a.button:hover { background-color: #f0f0f0;  }
#confirmButtons a.button:active { background-color: #d5d5d5;  }
