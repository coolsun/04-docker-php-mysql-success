    border: 1px solid #a9a9a9;
    padding: 4px;
    display: table;
}
.nutrient .row { display: table-row; }
.nutrient .row div{
    padding: 3px;
    vertical-align: middle;
    border-bottom: 1px solid #a9a9a9;
    display: table-cell;
}
.nutrient .row div.item { width: auto; text-align: left; }
.nutrient .row div.amount { width: 60px; text-align: left; }
.nutrient .row div.percent { width: 60px; text-align: right; }

.log-desc .count { margin: 0 0 0 125px; }
.count .calories { display: table; }
.count .calories .row { display: table-row; }
.count .calories .row div { display: table-cell; height: 60px; text-align: left; }
.count .calories .row div.kcal-count { width: 110px; }
.count .calories .row div.opt { font-size: 17px; width: 80px; text-align: right; }
.count .calories .row div.count { width: 40px; text-align: center; }
.count .calories .row div.kcal-count h2 { font-weight: bolder; }
.count .calories .row div.kcal-count span,
.count .calories .row div.count span { margin: 8px 0; text-align: center; display: block; }

.log-desc .body-count { text-align: center; margin: 40px 0 0; }
.body-count .formula { margin: 0 auto 60px; }
.body-count .formula .input-number { width: 85px; padding: 2px 0 1px; margin: 0 10px 0 0; text-align: center; }
.body-count .formula .input-underline { 
    width: 85px;
    padding: 2px 0 1px;
    text-align: center;
    border-top: 0;
    border-right: 0;
    border-left: 0;
    border-bottom: 2px solid #a9aaaa;
}
.body-count .formula caption { font-weight: bold; margin: 0 0 55px; }
.body-count .formula tbody td { height: 40px; text-align: left; }
.body-count .formula tbody td.item { width: 70px; text-align: right; }
.body-count .formula tbody td.operands { width: 130px; padding: 0 10px; text-align: left; }
.body-count .formula tbody td.count { width: 120px; text-align: center; }
.body-count .formula tfoot td.result { height: 60px; text-align: left; vertical-align: bottom; padding: 0 0 0 40px; }

.log-desc .body-spec { text-align: left; margin: 0 0 30px; }
.body-spec h2 { margin: 0 0 25px; }
.body-spec p { line-height: 2; margin: 0 0 25px; }
.body-spec small { font-size: 0.8em; line-height: 2.5; margin: 0 0 30px; }
.body-spec .range { border: 1px solid #999d9f; border-collapse: collapse; margin: 0 0 20px; }
.body-spec .range tr th {
    font-weight: normal;
    background-color:#e5e5e5;
    -webkit-box-shadow: inset -1px 1px 0 0 #fff;
    -moz-box-shadow: inset -1px 1px 0 0 #fff;
    box-shadow: inset -1px 1px 0 0 #fff;
}
.body-spec .range tr th,
.body-spec .range tr td {
    width: 125px;
    height: 25px;
    text-align: center;
    vertical-align: middle;
    border: 1px solid #999d9f;
}


