.spec-inner-srch { width: 550px; margin: 0 auto; }
.spec-inner { width: 670px; margin: 0 auto; }
.spec-content { margin: 5px 0; border: 1px solid #cacaca; }
.spec-content .search { padding: 24px 33px; }
.spec-content .search>input {
    width: 468px;
    height: 26px;
    line-height: 26px;
    padding: 0 6px;
    border: 1px solid #cacaca;
}
.spec-content .search>a>input {
    width: 468px;
    height: 26px;
    line-height: 26px;
    padding: 0 6px;
    border: 1px solid #cacaca;
}
.spec-content .setting { padding: 10px 20px; display: table; }
.spec-content .setting .row { display: table-row; height: 40px; }
.spec-content .setting .item { 
    width: 100px;
    font-weight: bold;
    padding: 15px 0;
    text-align: left;
    vertical-align: top;
    display: table-cell;
}
.spec-content .setting .extreme {
    padding: 0 10px 7px;
    text-align: center;
