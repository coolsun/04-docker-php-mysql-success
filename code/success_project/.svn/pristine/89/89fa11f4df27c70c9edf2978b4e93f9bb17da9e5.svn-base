}
.detail .nutrient { width: 270px; margin: 0 0 20px; }
.nutrient .head { width: 100%; clear: both; }
.nutrient .caption { text-align: left; padding: 3px 8px; float: left; }
.nutrient .unit { text-align: right; padding: 3px 8px; }
