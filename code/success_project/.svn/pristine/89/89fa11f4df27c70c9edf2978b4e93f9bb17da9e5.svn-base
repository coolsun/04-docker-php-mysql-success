.log-inner { width: 100%; }

.log-switch, .log-sheet {
    -webkit-box-shadow: inset 0 1px 0 0 #fff;
    -moz-box-shadow: inset 0 1px 0 0 #fff;
    box-shadow: inset 0 1px 0 0 #fff;
}
.log-switch { /* total height is limited to 35px */
    height: 33px;
    background-color: #e5e5e5;
    border-top: 1px solid #dbe3e7;
    border-right: 1px solid #c0c0c0;
    border-bottom: 1px solid #c7c7c7;
    border-left: 1px solid #c0c0c0;
    border-radius: 3px 3px 0 0;
    position: relative;
}
.log-switch span{ height: 22px; line-height: 22px; }

.log-switch .period { position: absolute; top: 9px; left: 8px; }
.log-switch .period li {   
    float: left;
    list-style-type: none;
    margin: 0 10px 0 0;
    display: inline-block;
}
.log-switch .period li a { color: #555; }
.log-switch .period li a:hover { color: #0000cc; text-decoration: underline; }
.log-switch .period select { width: 95px; height:22px; }

.log-switch .menu { position: absolute; top: 5px; right: 8px; }
.log-switch .menu li {
    color: #999;
    min-width: 35px;
    text-align: center;
    margin: 0 0 0 7px;
    display: inline-block;
    float: left;
    list-style-type: none;
}
.log-switch .menu li a { 
    min-width: 35px;
    height: 19px;
    line-height: 19px;
    padding: 1px 5px 2px;
    background-color: #e5e5e5;
    border: 1px solid #a5a5a5;
    display: block;
    -webkit-box-shadow: inset -1px 1px 0 0 #fff;
    -moz-box-shadow: inset -1px 1px 0 0 #fff;
    box-shadow: inset -1px 1px 0 0 #fff;
}
.log-switch .menu li:hover a { 
    background-color: #f1f1f1;
    -webkit-box-shadow: inset -1px 1px 0 0 #eee;
    -moz-box-shadow: inset -1px 1px 0 0 #eee;
    box-shadow: inset -1px 1px 0 0 #eee;
}
.log-switch .menu li a:active {
    color: #fff;
    border: 1px solid #828282;
    background-color: #adadad;
    -webkit-box-shadow: inset -1px 1px 0 0 #b3b3b3;
    -moz-box-shadow: inset -1px 1px 0 0 #b3b3b3;
    box-shadow: inset -1px 1px 0 0 #b3b3b3;
}
.log-switch .menu li.current a {
    color: #fff;
    border: 1px solid #828282;    
    background-color: #979797;
    -webkit-box-shadow: inset -1px 1px 0 0 #b3b3b3;
    -moz-box-shadow: inset -1px 1px 0 0 #b3b3b3;
    box-shadow: inset -1px 1px 0 0 #b3b3b3;
}

.log-sheet { width: 100%; border-collapse: collapse; }
.log-sheet thead { background-color: #eee; }
.log-sheet thead td {    
    text-align: center;
    padding: 5px 0;
    border-top: 1px solid #fff;
    border-left: 1px solid #dcdcdc;
    border-right: 1px solid #dcdcdc;
    border-bottom: 1px solid #c7c7c7;
    -webkit-box-shadow: inset -1px 0 0 0 #fff;
    -moz-box-shadow: inset -1px 0 0 0 #fff;
    box-shadow: inset -1px 0 0 0 #fff;
}
.log-sheet thead td.date { width: 120px; }
.log-sheet thead td.action { width: 86px; }

.log-sheet tbody { border: 1px solid #d6d6d6; }
.log-sheet tbody tr.even { background-color: #f3f2f2; }
.log-sheet tbody tr:hover { background-color: #c8d4e0; }
.log-sheet tbody td {
    height: 21px;    
    text-align: center;
    padding: 2px;
    vertical-align: middle;
    border-left: 1px solid #d6d6d6;
    border-right: 1px solid #d6d6d6;
}
.log-sheet tbody td>input.numb-edit { width: 70px; text-align: center; }
.log-sheet tbody td.empty { color: #999; }
.log-sheet tbody td.empty:hover { background-color: #fff; }
.log-sheet tbody td.item { text-align: left; padding: 2px 3px 2px 4px; }

.log-sheet tfoot td { padding: 8px; text-align: center; }
.log-sheet tfoot td.kcal { text-align: left; }

.log-desc { padding: 20px 0 0; margin: 6px 0; position: relative; }
.log-desc .note {
    text-align: right;
    position: absolute;
    top: 0;
    right: 9px;
}
.log-desc .note span { margin: 6px 0; display: block; }
.log-desc .note span a { color: #6782f5; }
.log-desc .note span a { color: #2c5dc3; }
.log-desc .note span a:hover { color: #3333ff; }

.log-desc .draw { margin: 0 25px 25px; }
.draw .pie-show { width: 330px; text-align: center; margin: 20px 0 35px 0; }
.draw .chart-show {    
    min-width: 330px;
    padding: 10px;
    margin: 20px 0 35px 0;
}
.draw .pie-show h2,
.draw .chart-show h2 { 
    width: 100%;
    font-size: .86em;    
    font-weight: bold;
    margin: 20px 0;
    text-align: center;
}

.draw .weight-show { display: table; margin: 0 0 50px 100px; }
.draw .weight-show tr td { width: 180px; text-align: left; }
.draw .weight-show tr td span { margin: 0 0 0 15px; }

.log-desc .detail { width: 570px; font-size: .86em; margin: 0 25px; }
.log-desc .detail h2 { 
    width: 100%;
    font-weight: normal;
    text-align: center;
    display: inline-block;
}
.detail .line-caption{ padding:0 18px; background:#fff; display:inline-block; }
