/* ==============================================
　　INPUT, SELECT and BUTTON SET 
============================================== */
input, select, th, td, textarea { 
    color: #555; 
    font-family: Arial, "Miicrosoft JhengHei", "微軟正黑體", Helvetica, Verdana, sans-serif;
    font-size: 1em;
}
input[type="text"] { border: 1px solid #b0b0b0; padding: 1px; margin: -3px 0 0 10px; }
input[type="button"] { 
    text-align: center;
    border: 1px solid #abaeaf;
    background-color: #e5e5e5;
}
select { border: 1px solid #b0b0b0; margin: -3px 0 0 10px; }
.input-numbers { width: 190px; padding: 0 5px; text-align: left;  box-sizing: border-box; }
.input-literal { width: 100px; padding: 0 5px; }
.input-date { width: 100px; text-align: center; }
.btn {
    min-width: 30px;
    height: 23px;
    padding: 0 3px 2px;
    cursor: pointer;
    display: inline-block;
    -webkit-box-shadow: inset -1px 1px 0 0 #fff;
    -moz-box-shadow: inset -1px 1px 0 0 #fff;
    box-shadow: inset -1px 1px 0 0 #fff;
}
.btn:active {
    color: #fff;
    background-color: #adadad;
    -webkit-box-shadow: inset -1px 1px 0 0 #b3b3b3;
    -moz-box-shadow: inset -1px 1px 0 0 #b3b3b3;
    box-shadow: inset -1px 1px 0 0 #b3b3b3;
}
.func-btn { width: 55px; height: 23px; word-spacing: 0.2em; }

/* ==============================================
　　CONTENT SET 
============================================== */
.page-outer { 
    font-size: 14px;
    line-height: 1.5;
    margin: 0 auto;
    background-color: #fff;
    position: relative;
}
.normal-inner { padding: 20px; text-align: left; position: relative; }
#near-inner { padding: 10px; text-align: left; position: relative; }
#far-inner { padding: 30px; text-align: left; position: relative; }
#primary-action { position: absolute; right: 10px; bottom: 10px; }

.normal-inner>h2 { height: 30px; line-height: 30px; vertical-align: top; }
.normal-inner>h2 span{ font-size: 2em; vertical-align: top; }
.normal-inner>p { line-height: 2em; }
.normal-inner>hr { border-top: 2px dashed #b5b5b5; margin: 0 0 25px; }

#far-inner>h2 { margin: 0 0 15px; }

.normal-inner .content { width: 620px; }
.normal-inner .content .pressure-menu { width: 100%; margin: 30px 0; }
.normal-inner .content .pressure-menu tr td { width: 145px; padding: 0 10px 15px 0; float: left; }
.normal-inner .content .pressure-menu tr td span { width: 125px; display: inline-block; }
.normal-inner .content .pressure-menu tr td input { margin: 5px 6px 0 0; vertical-align: top; }
.normal-inner .function { width: 60px; text-align: right; position: absolute; top: 10px; right: 10px; }

#near-inner .pressure-edit { width: 230px; height: 198px; border: 1px solid #a9a9a9; padding: 15px; overflow: auto; }
#near-inner .pressure-edit li { list-style-type: none; margin: 0 0 15px;  }
#near-inner .pressure-edit li span { width: 190px; display: inline-block; }
#near-inner .pressure-edit li input { margin: 5px 6px 0 0; vertical-align: top; }
#near-inner .pressure-func { width: 55px; text-align: center; position: absolute; top: 10px; right: 10px; }
#near-inner .pressure-func input { margin: 0 0 10px; } 

.page-outer .search-list { width: 665px; height: 400px; overflow: auto; }
.page-outer .search-list li { padding: 0 10px; list-style-type: none; border-bottom: 1px solid #bebebe; }
.page-outer .search-list li:hover { background-color: #c8d4e0; }
.page-outer .search-list li  a { display: block; }

.page-outer .sport-type {
    width: 88px;
    height: 406px;
    padding: 24px 0 0 6px;
    margin: 0 1px 0 0;
    background-color: #d9d9d9;
    float: left;
}
.page-outer .sport-type li { padding: 1px 0 1px 25px; list-style-type: none; }
.page-outer .sport-type li:hover { background-color: #c5d3e7; }
.page-outer .sport-type li.current { background-color: #fff; }
.page-outer .sport-list { 
    width: 510px;
    height: 406px;
    padding: 24px 0 0;
    overflow: auto;
    background-color: #fff;
    float: right;
}
.page-outer .sport-list li { padding: 1px 25px; list-style-type: none; }
.page-outer .sport-list li.odd { background-color: #f6f6f6; }
.page-outer .sport-list li:hover { background-color: #c8d4e0; }

.simple-table { width: 100%; margin: 0 0 10px; }
.simple-table tr td { padding: 0 0 8px; vertical-align: top; }
.simple-table tr td span { margin: 0 10px; line-height: 1.5; }

.distance-table { width: 100%; min-height: 90px; margin: 0 0 10px; }
.distance-table tr td { padding: 0px 15px 18px 0px; vertical-align: top; }
.distance-table tr td input { text-align: left; }
.distance-table tr td span { margin: 0 8px; line-height: 1.5; }

.list-numb { width: 100%; margin: -5px 0 30px; }
.list-numb li { list-style: decimal outside; text-align: left; margin: 0 0 20px 20px; }

