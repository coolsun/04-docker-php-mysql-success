.calculator {
	z-index: 2000;
	padding: 13px 5px;
	padding-bottom: 3px;
	position: absolute;
	width: 130px;
	height: 190px;
	background-color: #E5E5E5;
	border-width: 1px;
	border-style: solid;
	border-color: #DBE3E7 #C0C0C0 #C7C7C7;
	border-radius: 3px 3px 0px 0px;
}

.calculator > div.keytable {
	padding: 5px;
	padding-bottom: 1px;
	background-color: #FFF;
	border-width: 1px;
	border-style: solid;
	border-color: #a9a9a9;
}
.calculator > div.keytable > button.key {
  font-family: Arial, "Microsoft JhengHei", "微軟正黑體";
  font-size: 14px;
  color: #555;
  padding-top: 0;
	text-align: center;
	border: 1px solid #abaeaf;
	background-color: #e5e5e5;
  cursor: pointer;
  -webkit-box-shadow: inset -1px 1px 0 0 #fff;
  -moz-box-shadow: inset -1px 1px 0 0 #fff;
  box-shadow: inset -1px 1px 0 0 #fff;
  vertical-align: middle;
  line-height: 23px;
	margin: 1px;
	margin-bottom: 4px;
	display: inline-block;
	width: 34px;
	height: 25px;
}
.calculator > div.keytable > button.key::selection,
.calculator > div.keytable > button.key::-moz-selection {
	background-color: #e5e5e5;
}
.calculator > div.keytable > button.key:hover {
	background-color:rgb(215,224,229);
}
.calculator > div.keytable > button.key:active{
	background-color:rgb(196,214,224);
}

